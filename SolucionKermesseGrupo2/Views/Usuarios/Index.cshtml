<div id="Container">
    <div class="center">
        <table class="table" id="TablaUsers">
            <tr>
                <th id="TituloUsers1">
                    @Html.DisplayNameFor(model => model.userName)
                </th>
                <th id="TituloPwd1">
                    @Html.DisplayNameFor(model => model.pwd)
                </th>
                <th id="TituloNombreUsers">
                    @Html.DisplayNameFor(model => model.nombres)
                </th>
                <th id="TituloApellidosUsers">
                    @Html.DisplayNameFor(model => model.apellidos)
                </th>
                <th id="TituloEmailUsers">
                    @Html.DisplayNameFor(model => model.email)
                </th>
                <th id="TituloEstadosUsers">
                    @Html.DisplayNameFor(model => model.estado)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td id="ValorUser1">
                        @Html.DisplayFor(modelItem => item.userName)
                    </td>
                    <td id="ValorUser2">
                        @Html.DisplayFor(modelItem => item.pwd)
                    </td>
                    <td id="ValorUser3">
                        @Html.DisplayFor(modelItem => item.nombres)
                    </td>
                    <td id="ValorUser4">
                        @Html.DisplayFor(modelItem => item.apellidos)
                    </td>
                    <td id="ValorUser5">
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td id="ValorUser6">
                        @Html.DisplayFor(modelItem => item.estado)
                    </td>
                    <td>
                        <p id="Contenedit">
                            @Html.ActionLink("Editar", "Edit", new { id = item.idUsuario }) |
                            @Html.ActionLink("Detalles", "Details", new { id = item.idUsuario }) |
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.idUsuario })
                        </p>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
