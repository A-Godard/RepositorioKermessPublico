        <div>
            <div class="center" id="BtnCreate1">
                <div class="BtnCrear">
                    <a class="btn btn-primary" id="BtnCrear" href="@Url.Action("Create")" role="button">Crear nuevo</a>
                </div>
            </div>
        </div>
    </div>

    <div id="Container">
        <br/>
        <div class="center">
            <table class="table" id="TablaMoneda">
                <tr>
                    <th id="lblMoneda1">
                        @Html.DisplayNameFor(model => model.nombre)
                    </th>
                    <th id="lblMoneda2">
                        @Html.DisplayNameFor(model => model.simbolo)
                    </th>
                    @*<th id="lblMoneda3">
                            @Html.DisplayNameFor(model => model.estado)
                        </th>*@
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td id="ModelMoneda1">
                            @Html.DisplayFor(modelItem => item.nombre)
                        </td>
                        <td id="ModelMoneda2">
                            @Html.DisplayFor(modelItem => item.simbolo)
                        </td>
                        @*<td id="ModelMoneda3">
                                @Html.DisplayFor(modelItem => item.estado)
                            </td>*@
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.idMoneda }) |
                            @Html.ActionLink("Detalles", "Details", new { id = item.idMoneda }) |
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.idMoneda })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
    <br />


</body>
