<h2>Editar Opciones <img id="iconouser" src="~/Content/img/flat-g924eb82b4_1280.png" /></h2>

<head>
    @Styles.Render("~/Content/StyleSheetEditEspecial.css")
    @Styles.Render("~/Content/Site.css")
</head>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" id="Formul">

    <hr />
    <br />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.idOpcion)
    <div id="Container">
        <div class="center">
            <div class="form-group" id="Opcion1">
                @Html.LabelFor(model => model.opcionDescripcion, htmlAttributes: new { @class = "control-label col-md-2, TitleEdit" })
                <div class="col-md-10" id="FormEdit">
                    @Html.EditorFor(model => model.opcionDescripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.opcionDescripcion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" id="Opcion2">
                @Html.LabelFor(model => model.estado, htmlAttributes: new { @class = "control-label col-md-2, TitleEdit" })
                <div class="col-md-10" id="FormEdit">
                    @Html.EditorFor(model => model.estado, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.estado, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <div id="Container">
        <div class="center">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" id="BtnGuardar" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Regresar al menu principal", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
