@model IEnumerable<SolucionKermesseGrupo2.Models.Opcion>

@{
    ViewBag.Title = "TablaOpciones";
    Layout = "~/Views/Shared/_LayoutControladores.cshtml";
}
<head>
    @Styles.Render("~/Content/StyleSheetEdit.css")
    @Styles.Render("~/Content/Site.css")
</head>
<br />
<br />
<br />
<br />
<br />
<br />
