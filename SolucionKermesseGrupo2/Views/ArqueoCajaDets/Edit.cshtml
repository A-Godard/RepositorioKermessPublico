@model SolucionKermesseGrupo2.Models.ArqueoCajaDet

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutControladores.cshtml";
}

<div class="mx-auto" style="margin-top: 150px;">
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- Formulario -->
            <div class="container">

                <div class="row ">

                    <div class="col-lg-10 mx-auto m-auto">

                        <div class="card rounded shadow border-0">

                            <div class="card-header">
                                <div style="margin-left:300px;">
                                    <h2>
                                        Editar Caja Detalle
                                    </h2>
                                </div>
                            </div>

                            <div class="card-body bg-white rounded">
                                @using (Html.BeginForm("Edit", "ArqueoCajaDets", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.idArqueoCajaDet)

                                <div class="form-group row">
                                    <div class="col-sm-12 mb-3">
                                        
                                        @Html.HiddenFor(model => model.arqueoCaja)
                                        @Html.ValidationMessageFor(model => model.arqueoCaja, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-12 mb-3">
                                        <label>Moneda:</label>
                                        @Html.DropDownListFor(model => model.moneda, null, htmlAttributes: new { @class = "form-control form-control-user" })
                                        @Html.ValidationMessageFor(model => model.moneda, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-12 mb-3">
                                        <label>Denominacion :</label>
                                        @Html.DropDownListFor(model => model.denominacion, null, htmlAttributes: new { @class = "form-control form-control-user" })
                                        @Html.ValidationMessageFor(model => model.denominacion, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-12 mb-3">
                                        <label>Cantidad:</label>
                                        @Html.TextBoxFor(x => x.cantidad, new { @class = "form-control form-control-user" })
                                        @Html.ValidationMessageFor(model => model.cantidad, "", new { @class = "text-danger" })

                                    </div>

                                    <div class="col-sm-12 mb-3">
                                        <label>subtotal:</label>
                                        @Html.TextBoxFor(x => x.subtotal, new { @class = "form-control form-control-user" })
                                        @Html.ValidationMessageFor(model => model.subtotal, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                                    <div class="text-center form-group">
                                        <input class="btn btn-primary btn-block" type="submit" value="Guardar" />
                                        <input class="btn btn-danger btn-block" type="reset" value="Cancelar" />
                                    </div>
                                    <div class="text-center">
                                        <a href="@Url.Action("Index","ArqueoCajaDets")">
                                            <i class="fas fa-arrow-circle-left"></i>&nbsp;Volver a la tabla
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </div>

</div>

